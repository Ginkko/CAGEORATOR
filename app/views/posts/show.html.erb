<%= content_for(:title, "#{@post.title} | CAGEORATOR") %>


<div class="well col-md-6 col-md-offset-3">
  <h3 class="lead text-center"> <%= @post.title %> </h3>
  <h5 class="lead text-center"> Offered by - <span style="font-weight: bolder; font-family: sans-serif;"><%= link_to @post.user.name, user_path(@post.user) %></span></h5>
  <img class="img-responsive text-center" src="<%= @post.image %>" alt="A Cage" />
  <hr>
  <p>
    <%= @post.description %>
  </p>
  <hr>
  <div class="btn-group btn-group-sm" role="group">

    <%= link_to "Edit", edit_post_path(@post), class: "btn btn-info" %>
    <%= link_to "Delete", post_path(@post), class: "btn btn-danger",
                                          data: {confirm: "Rescind tribute?",
                                                  method: 'delete'} %>
  </div>

</div>
