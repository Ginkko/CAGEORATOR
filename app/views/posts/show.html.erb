<%= content_for(:title, "#{@post.title} | CAGEORATOR") %>


<div class="well col-md-6 col-md-offset-3">
  <h3 class="lead text-center"> <%= @post.title %> </h3>
  <h5 class="lead text-center"> Offered by - <span style="font-weight: bolder; font-family: sans-serif;"><%= link_to @post.user.name, user_path(@post.user) %></span></h5>
  <img class="img-responsive text-center" src="<%= @post.image %>" alt="A Cage" />
  <hr>
  <p>
    <%= @post.description %>
  </p>
  <hr>
  <div class="btn-group btn-group-sm" role="group">

    <%= link_to "Edit", edit_post_path(@post), class: "btn btn-info" %>
    <%= link_to "Delete", post_path(@post), class: "btn btn-danger",
                                          data: {confirm: "Rescind tribute?",
                                                  method: 'delete'} %>

  </div>
    <%= link_to "Comment", new_post_comment_path(@post), class: "btn btn-success btn-sm", style: "float:right;" %>
    <hr>
    <% @post.comments.each do |comment| %>
  <p><span style="font-weight: bold;"><%= link_to comment.user.name, user_path(comment.user) %> Praises: </span><%= comment.body %></p>
    <p><%= time_ago_in_words(comment.created_at) %> ago </p>
    <i><b>edited: <%= time_ago_in_words(comment.updated_at) %> ago</b></i>

    <p class="text-center"> <%= link_to "Edit Comment", edit_post_comment_path(@post, comment), class: "btn btn-warning btn-xs" %></p>
    <hr>
    <% end %>
  </div>
</div>
